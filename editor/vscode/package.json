{
	"name": "opennefia-support",
	"displayName": "OpenNefia Support",
	"description": "Editor support for OpenNefia",
	"publisher": "Ruin0x11",
	"repository": "https://github.com/Ruin0x11/OpenNefia",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:opennefia.hotloadThisFile",
		"onCommand:opennefia.insertTemplate",
		"workspaceContains:deps/elona"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "opennefia.hotloadThisFile",
				"title": "OpenNefia: Hotload this file"
			},
			{
				"command": "opennefia.insertTemplate",
				"title": "OpenNefia: Insert template"
			},
			{
				"command": "opennefia.launchGame",
				"title": "OpenNefia: Launch game"
			},
			{
				"command": "opennefia.describeAtPoint",
				"title": "OpenNefia: Describe thing at point"
			},
			{
				"command": "opennefia.insertRequireStatement",
				"title": "OpenNefia: Insert require statement"
			},
			{
				"command": "opennefia.requireThisFileInRepl",
				"title": "OpenNefia: Require this file in REPL"
			},
			{
				"command": "opennefia.resetDrawLayers",
				"title": "OpenNefia: Reset draw layers"
			},
			{
				"command": "opennefia.sendSelectionToRepl",
				"title": "OpenNefia: Send selection to REPL"
			},
			{
				"command": "opennefia.sendFileToRepl",
				"title": "OpenNefia: Send file to REPL"
			},
			{
				"command": "opennefia.insertId",
				"title": "OpenNefia: Insert ID"
			},
			{
				"command": "opennefia.searchDocumentation",
				"title": "OpenNefia: Search documentation"
			},
			{
				"command": "opennefia.makeScratchBuffer",
				"title": "OpenNefia: Make scratch buffer"
			},
			{
				"command": "opennefia.createNewMod",
				"title": "OpenNefia: Create new mod"
			},
			{
				"command": "opennefia.insertEventHandler",
				"title": "OpenNefia: Insert event handler"
			}
		],
		"keybindings": [
			{
				"command": "opennefia.hotloadThisFile",
				"when": "editorTextFocus",
				"key": "Ctrl+Shift+R",
				"mac": "Shift+Cmd+R"
			},
			{
				"command": "opennefia.insertTemplate",
				"when": "editorTextFocus",
				"key": "Ctrl+Shift+T",
				"mac": "Shift+Cmd+T"
			},
			{
				"command": "opennefia.launchGame",
				"key": "Alt+L"
			},
			{
				"command": "opennefia.describeAtPoint",
				"when": "editorTextFocus",
				"key": "Ctrl+D",
				"mac": "Cmd+D"
			},
			{
				"command": "opennefia.insertRequireStatement",
				"when": "editorTextFocus",
				"key": "Ctrl+I",
				"mac": "Cmd+I"
			},
			{
				"command": "opennefia.requireThisFileInRepl",
				"when": "editorTextFocus",
				"key": "Ctrl+Shift+E",
				"mac": "Shift+Cmd+E"
			},
			{
				"command": "opennefia.sendSelectionToRepl",
				"when": "editorTextFocus && editorHasSelection",
				"key": "Ctrl+Shift+S",
				"mac": "Shift+Cmd+S"
			},
			{
				"command": "opennefia.sendFileToRepl",
				"when": "editorTextFocus && !editorHasSelection",
				"key": "Ctrl+Shift+S",
				"mac": "Shift+Cmd+S"
			},
			{
				"command": "opennefia.insertId",
				"when": "editorTextFocus && !editorHasSelection",
				"key": "Ctrl+Shift+D",
				"mac": "Shift+Cmd+D"
			},
			{
				"command": "opennefia.insertEventHandler",
				"when": "editorTextFocus && !editorHasSelection",
				"key": "Ctrl+Shift+V",
				"mac": "Shift+Cmd+V"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vscode:package": "vsce package",
		"vscode:publish": "vsce publish",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"class-transformer": "^0.2.3",
		"reflect-metadata": "^0.1.13"
	}
}
